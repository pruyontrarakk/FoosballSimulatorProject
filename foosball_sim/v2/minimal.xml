<mujoco model="mini_foos_xyz">
  <option timestep="0.005" gravity="0 0 -9.81"/>

  <!-- Table dims (meters): half-length = 1.5 (x), half-width = 0.7 (y) -->
  <worldbody>
    <!-- Floor plane -->
    <geom name="floor" type="plane" size="2 2 0.1" rgba="0.2 0.5 0.2 1"/>

    <!-- Side walls (keep the ball on the table) -->
    <body name="walls" pos="0 0 0.05">
      <!-- end walls at x = ±1.5 -->
      <geom name="wall_xL" type="box" pos="-1.5 0 0.1" size="0.02 0.70 0.10" rgba="0.6 0.6 0.6 1"/>
      <geom name="wall_xR" type="box" pos="+1.5 0 0.1" size="0.02 0.70 0.10" rgba="0.6 0.6 0.6 1"/>
      <!-- side walls at y = ±0.7 -->
      <geom name="wall_yB" type="box" pos="0 -0.70 0.1" size="1.5 0.02 0.10" rgba="0.6 0.6 0.6 1"/>
      <geom name="wall_yT" type="box" pos="0 +0.70 0.1" size="1.5 0.02 0.10" rgba="0.6 0.6 0.6 1"/>
    </body>

    <!-- Ball with 3 slide joints (x,y,z) -->
    <body name="ball" pos="0 0 0.05">
      <!-- Explicit 3D translation joints; names match your Python: ball_x, ball_y, ball_z -->
      <joint name="ball_x" type="slide" axis="1 0 0" limited="true" range="-1.45 1.45"/>
      <joint name="ball_y" type="slide" axis="0 1 0" limited="true" range="-0.65 0.65"/>
      <joint name="ball_z" type="slide" axis="0 0 1" limited="true" range="0.03 0.30"/>
      <geom name="ball_geom" type="sphere" size="0.03"
            mass="0.03" friction="0.6 0.1 0.01" rgba="0.95 0.95 0.1 1"
            solref="0.005 1" solimp="0.9 0.9 0.01"/>
    </body>

    <!-- Right rod: rotate about y-axis -->
    <body name="rod_R" pos="0.8 0 0.06">
      <joint name="rodR_hinge" type="hinge" axis="0 1 0" limited="true" range="-1.2 1.2"/>
      <geom type="capsule" fromto="0 0 0  0 0 0.5" size="0.01" rgba="0.7 0.7 0.7 1"/>
      <body name="paddle_R" pos="0 0 0.35">
        <geom type="box" size="0.02 0.08 0.04" rgba="0.8 0.8 0.9 1"/>
      </body>
    </body>

    <!-- Left rod (opponent) -->
    <body name="rod_L" pos="-0.8 0 0.06">
      <joint name="rodL_hinge" type="hinge" axis="0 1 0" limited="true" range="-1.2 1.2"/>
      <geom type="capsule" fromto="0 0 0  0 0 0.5" size="0.01" rgba="0.7 0.7 0.7 1"/>
      <body name="paddle_L" pos="0 0 0.35">
        <geom type="box" size="0.02 0.08 0.04" rgba="0.9 0.8 0.8 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="u_right" joint="rodR_hinge" gear="2.0"/>
    <motor name="u_left"  joint="rodL_hinge" gear="2.0"/>
  </actuator>
</mujoco>
